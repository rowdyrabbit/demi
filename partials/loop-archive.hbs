{{! The main content area on the homepage }}
<section class="articles multiple">

	{{! Each post will be output using this markup }}
	{{#foreach posts}}
	<article class="{{post_class}}">

		<header>


            <span>{{date published_at format="DD MMMM, YYYY"}} by {{author.name}} <span class="topics">{{#if tags}}&lt;&lt;&nbsp;{{tags separator=", "}}&nbsp;&gt;&gt;{{/if}}</span></span>

			<h1><a href="{{url}}" title="{{title}}">{{title}}</a></h1>

		</header>

		<section>
			<p>{{content}}</p>
		</section>

	</article>
	{{/foreach}}

</section>

{{!! After all the posts, we have the previous/next pagination links }}
{{> pagination}}